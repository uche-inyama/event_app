<div class="mb-4">
  <%= form_with model: event do |form| %>
    <%= render "shared/error_messages", form: form %>

    <div class="row form-row">
      <div class="form-group col-md-6">
        <%= form.label :start_date %>
        <%= form.date_field :start_date, class: "form-control mb-3"%>
      </div>
      <div class="form-group col-md-6">
        <%= form.label :end_date %>
        <%= form.date_field :end_date, class: "form-control mb-3" %>
      </div>
    </div>
    <div class="form-group">
      <%= form.label :address %>
      <%= form.text_field :address, class: "form-control mb-3", placeholder: :address %> 
    </div>

    <div class="row form-row">
      <div class="form-group">
        <%= form.label :theme %>
        <%= form.text_field :theme, class: "form-control mb-3", placeholder: :theme %> 
      </div>
    </div>

    <div class="form-group">
      <%= form.label :details %>
      <%= form.text_field :details, class: "form-control mb-3", placeholder: :details %> 
    </div>

    <div class="row form-row mb-3">
      <div class="form-group col-md-3">
        <%= form.label :time %>
        <%= form.time_field :time, class: "form-control mb-3" %>   
      </div>
      <div class="form-group col-md-3">
        <%= form.label :image %>
        <%= form.file_field :image, class: "form-control mb-3" %>
      </div>
      <div class="d-md-flex align-items-center justify-content-center form-group col-md-3 mb-3">
        <%= form.select :event_type, [["free", "free"], ["paid", "paid"]] %>
      </div>
      <div class="d-md-flex align-items-center justify-content-around form-group col-md-3 mb-3">
        <%= form.radio_button :status, "active" %>
        <%= form.label :active %>

        <%= form.radio_button :status, "inactive" %>
        <%= form.label :inacive, "inactive", class: "text-transform-capitalize" %>
      </div> 
    </div>
    <%= link_to "Cancel", events_path, class: "btn btn-primary py-1" %>
    <%= form.submit %>
  <% end %>
</div>