<% if current_user.likes?(event) %>
  <%= turbo_frame_tag "like_#{event.id}" do %>
    <%= button_to "#{pluralize(event.likes.count, 'like') || 0 }", event_like_path(event), class: "mr-2 btn btn-primary", method: :delete %>
  <% end %>
<% else %>
  <%= turbo_frame_tag "like_#{event.id}" do %>
    <%= button_to "#{pluralize(event.likes.count, 'like') || 0 }", event_like_path(event), class: "mr-2 btn btn-primary", method: :post %>
  <% end %>
<% end %>